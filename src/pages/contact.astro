    list-style: none;
    margin-top: 1rem;
  }

  .landmark-info li {
    padding: 0.25rem 0;
    position: relative;
    padding-left: 1.5rem;
  }

  .landmark-info li:before {
    content: "üìç";
    position: absolute;
    left: 0;
  }

  .faq-section {
    background: #F8FAFC;
    padding: 4rem 0;
  }

  .faq-container {
    max-width: 800px;
    margin: 3rem auto 0;
  }

  .faq-item {
    background: white;
    border-radius: 10px;
    margin-bottom: 1rem;
    box-shadow: 0 2px 5px rgba(0,0,0,0.1);
  }

  .faq-question {
    padding: 1.5rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    cursor: pointer;
    border-bottom: 1px solid #E5E7EB;
  }

  .faq-question h4 {
    color: #1E40AF;
    margin: 0;
    font-size: 1.1rem;
  }

  .faq-toggle {
    font-size: 1.5rem;
    color: #F97316;
    font-weight: bold;
    transition: transform 0.3s ease;
  }

  .faq-answer {
    padding: 0 1.5rem 1.5rem;
    display: none;
  }

  .faq-item.active .faq-answer {
    display: block;
  }

  .faq-item.active .faq-toggle {
    transform: rotate(45deg);
  }

  .cta-section {
    background: #1F2937;
    color: white;
    padding: 4rem 0;
  }

  .cta-section h2 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  @media (max-width: 768px) {
    .page-hero h1 {
      font-size: 2rem;
    }

    .form-row {
      grid-template-columns: 1fr;
    }

    .booking-form-container {
      padding: 1.5rem;
    }

    .cta-section h2 {
      font-size: 2rem;
    }
  }
</style>

<script>
  // FAQ Toggle Functionality
  document.querySelectorAll('.faq-question').forEach(question => {
    question.addEventListener('click', () => {
      const faqItem = question.parentElement;
      const isActive = faqItem.classList.contains('active');
      
      // Close all FAQ items
      document.querySelectorAll('.faq-item').forEach(item => {
        item.classList.remove('active');
      });
      
      // Open clicked item if it wasn't active
      if (!isActive) {
        faqItem.classList.add('active');
      }
    });
  });

  // Booking Form Submission
  document.getElementById('bookingForm').addEventListener('submit', function(e) {
    e.preventDefault();
    
    // Get form data
    const formData = new FormData(this);
    const data = Object.fromEntries(formData);
    
    // Create WhatsApp message
    let message = `üöï *New Booking Request - Aarti Travels*\n\n`;
    message += `üë§ *Name:* ${data.name}\n`;
    message += `üìû *Phone:* ${data.phone}\n`;
    if (data.email) message += `üìß *Email:* ${data.email}\n`;
    message += `üìç *Pickup:* ${data.pickup}\n`;
    message += `üéØ *Destination:* ${data.destination}\n`;
    message += `üìÖ *Date:* ${data.date}\n`;
    message += `üïê *Time:* ${data.time}\n`;
    message += `üöó *Vehicle:* ${data.vehicle}\n`;
    message += `üõ£Ô∏è *Trip Type:* ${data.tripType}\n`;
    message += `üë• *Passengers:* ${data.passengers}\n`;
    if (data.requirements) message += `üìù *Special Requirements:* ${data.requirements}\n`;
    message += `\nPlease confirm availability and provide quote. Thank you!`;
    
    // Open WhatsApp
    const whatsappUrl = `https://wa.me/919325780522?text=${encodeURIComponent(message)}`;
    window.open(whatsappUrl, '_blank');
    
    // Show success message
    alert('Your booking request has been sent via WhatsApp. We will contact you shortly with confirmation and quote!');
  });

  // Set minimum date to today
  document.getElementById('date').min = new Date().toISOString().split('T')[0];
</script>