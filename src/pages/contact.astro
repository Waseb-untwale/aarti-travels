    padding: 4rem 0;
  }

  .office-details {
    margin-top: 1rem;
  }

  .office-item {
    margin-bottom: 2rem;
  }

  .office-item h5 {
    color: #1E40AF;
    margin-bottom: 0.5rem;
    font-size: 1.1rem;
  }

  .map-container {
    height: 300px;
    border-radius: 15px;
    overflow: hidden;
