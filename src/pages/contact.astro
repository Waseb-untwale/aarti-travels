<Layout title="Contact Us - Aarti Travels" description="Get in touch with Aarti Travels for all your cab service needs in Pune. Call, WhatsApp, or visit us for bookings and inquiries.">
  <!-- Hero Section -->
  <section class="page-hero">
    <div class="container">
      <h1>Contact Us</h1>
      <p>Get in touch for bookings, inquiries, and all your transportation needs</p>
    </div>
  </section>

  <!-- Contact Information -->
  <section class="section-padding">
    <div class="container">
      <div class="grid grid-3">
        <div class="contact-card">
          <div class="contact-icon">üìû</div>
          <h4>Call Us</h4>
          <p>Available 24/7 for bookings and support</p>
          <div class="contact-details">
            <a href="tel:+919325780522">+91 9325780522</a>
          </div>
          <div class="contact-note">Immediate response guaranteed</div>
        </div>

        <div class="contact-card">
          <div class="contact-icon">üí¨</div>
          <h4>WhatsApp</h4>
          <p>Quick booking and instant quotes</p>
          <div class="contact-details">
            <a href="https://wa.me/919325780522" target="_blank">+91 9325780522</a>
          </div>
          <div class="contact-note">Chat with us anytime</div>
        </div>

        <div class="contact-card">
          <div class="contact-icon">üìß</div>
          <h4>Email</h4>
          <p>For detailed inquiries and bookings</p>
          <div class="contact-details">
            <a href="mailto:info@aartitravels.com">info@aartitravels.com</a>
          </div>
          <div class="contact-note">We reply within 2 hours</div>
        </div>
      </div>
    </div>
  </section>

  <!-- Booking Form -->
  <section class="booking-form-section">
    <div class="container">
      <div class="grid grid-2">
        <div>
          <h2>Quick Booking Form</h2>
          <p>Fill out this form and we'll get back to you with the best quote for your travel needs. Our team will contact you within 30 minutes to confirm your booking.</p>
          
          <div class="booking-benefits">
            <h4>Why Book With Us?</h4>
            <ul>
              <li>‚úÖ Instant quote via WhatsApp or call</li>
              <li>‚úÖ No advance payment required for local trips</li>
              <li>‚úÖ Professional and verified drivers</li>
              <li>‚úÖ Clean and well-maintained vehicles</li>
              <li>‚úÖ 24/7 customer support</li>
              <li>‚úÖ Transparent pricing with no hidden costs</li>
            </ul>
          </div>
        </div>
        
        <div class="booking-form-container">
          <form class="booking-form" id="bookingForm">
            <div class="form-group">
              <label for="name">Full Name *</label>
              <input type="text" id="name" name="name" required>
            </div>

            <div class="form-group">
              <label for="phone">Phone Number *</label>
              <input type="tel" id="phone" name="phone" required>
            </div>

            <div class="form-group">
              <label for="email">Email Address</label>
              <input type="email" id="email" name="email">
            </div>

            <div class="form-row">
              <div class="form-group">
                <label for="pickup">Pickup Location *</label>
                <input type="text" id="pickup" name="pickup" required>
              </div>

              <div class="form-group">
                <label for="destination">Destination *</label>
                <input type="text" id="destination" name="destination" required>
              </div>
            </div>

            <div class="form-row">
              <div class="form-group">
                <label for="date">Travel Date *</label>
                <input type="date" id="date" name="date" required>
              </div>

              <div class="form-group">
                <label for="time">Pickup Time *</label>
                <input type="time" id="time" name="time" required>
              </div>
            </div>

            <div class="form-group">
              <label for="vehicle">Vehicle Type *</label>
              <select id="vehicle" name="vehicle" required>
                <option value="">Select Vehicle Type</option>
                <option value="hatchback">Hatchback (4 passengers)</option>
                <option value="sedan">Sedan (4 passengers)</option>
                <option value="muv">MUV (6-7 passengers)</option>
                <option value="suv">SUV (6-7 passengers)</option>
              </select>
            </div>

            <div class="form-group">
              <label for="tripType">Trip Type *</label>
              <select id="tripType" name="tripType" required>
                <option value="">Select Trip Type</option>
                <option value="local">Local (Within Pune)</option>
                <option value="outstation">Outstation (Outside Pune)</option>
                <option value="airport">Airport Transfer</option>
                <option value="hourly">Hourly Rental</option>
              </select>
            </div>

            <div class="form-group">
              <label for="passengers">Number of Passengers</label>
              <select id="passengers" name="passengers">
                <option value="1">1 Passenger</option>
                <option value="2">2 Passengers</option>
                <option value="3">3 Passengers</option>
                <option value="4">4 Passengers</option>
                <option value="5">5 Passengers</option>
                <option value="6">6 Passengers</option>
                <option value="7">7+ Passengers</option>
              </select>
            </div>

            <div class="form-group">
              <label for="requirements">Special Requirements</label>
              <textarea id="requirements" name="requirements" rows="3" placeholder="Any special requirements, stops, or instructions..."></textarea>
            </div>

            <button type="submit" class="btn btn-primary booking-btn">
              Get Instant Quote via WhatsApp
            </button>

            <div class="form-note">
              <p>By submitting this form, you agree to receive booking confirmations and updates via WhatsApp and SMS.</p>
            </div>
          </form>
        </div>
      </div>
    </div>
  </section>

  <!-- Office Information -->
  <section class="office-info">
    <div class="container">
      <div class="grid grid-2">
        <div>
          <h3>üè¢ Office Information</h3>
          <div class="office-details">
            <div class="office-item">
              <h5>üìç Service Area</h5>
              <p>Complete Pune city coverage including Hadapsar, Hinjewadi, Wakad, Baner, Koregaon Park, Camp, and all suburbs. We also serve PCMC area including Pimpri, Chinchwad, and Akurdi.</p>
            </div>
            
            <div class="office-item">
              <h5>üïí Working Hours</h5>
              <p><strong>24/7 Service Available</strong><br>
              Office Hours: 9:00 AM - 9:00 PM<br>
              Emergency Bookings: Available anytime</p>
            </div>
            
            <div class="office-item">
              <h5>üí≥ Payment Methods</h5>
              <p>Cash, UPI (PhonePe, GPay, Paytm), Bank Transfer, Credit/Debit Cards. For outstation trips, 25% advance required.</p>
            </div>
          </div>
        </div>
        
        <div>
          <h3>üó∫Ô∏è Our Location</h3>
          <div class="map-container">
            <div class="map-placeholder">
              <div class="map-content">
                <div class="location-icon">üìç</div>
                <h4>Aarti Travels</h4>
                <p>Pune, Maharashtra 411001<br>India</p>
                <div class="map-actions">
                  <a href="https://maps.google.com" target="_blank" class="btn">View on Google Maps</a>
                </div>
              </div>
            </div>
          </div>
          
          <div class="landmark-info">
            <h5>üìç Easy to Find</h5>
            <p>We operate throughout Pune city. Our drivers will reach your pickup location. Major landmarks we serve include:</p>
            <ul>
              <li>Pune Railway Station & Bus Stand</li>
              <li>Pune Airport (Lohegaon)</li>
              <li>IT Parks (Hinjewadi, Magarpatta, EON)</li>
              <li>Shopping Malls (Phoenix, Westend, Seasons)</li>
              <li>Hotels & Hospitals across Pune</li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="faq-section">
    <div class="container">
      <div class="text-center">
        <h2>Frequently Asked Questions</h2>
        <p>Quick answers to common questions about our cab services</p>
      </div>
      
      <div class="faq-container">
        <div class="faq-item">
          <div class="faq-question">
            <h4>How can I book a cab with Aarti Travels?</h4>
            <span class="faq-toggle">+</span>
          </div>
          <div class="faq-answer">
            <p>You can book through WhatsApp (+91 9325780522), phone call, or by filling out our booking form above. WhatsApp is the fastest way to get an instant quote and confirmation.</p>
          </div>
        </div>

        <div class="faq-item">
          <div class="faq-question">
            <h4>What are your payment options?</h4>
            <span class="faq-toggle">+</span>
          </div>
          <div class="faq-answer">
            <p>We accept cash, UPI payments (PhonePe, GPay, Paytm), bank transfers, and credit/debit cards. For local trips, payment can be made after the ride. Outstation trips require 25% advance.</p>
          </div>
        </div>

        <div class="faq-item">
          <div class="faq-question">
            <h4>Are your vehicles and drivers insured?</h4>
            <span class="faq-toggle">+</span>
          </div>
          <div class="faq-answer">
            <p>Yes, all our vehicles have comprehensive insurance coverage and our drivers are professionally trained and verified. Your safety is our top priority.</p>
          </div>
        </div>

        <div class="faq-item">
          <div class="faq-question">
            <h4>Do you provide services outside Pune?</h4>
            <span class="faq-toggle">+</span>
          </div>
          <div class="faq-answer">
            <p>Yes, we provide outstation services to all major destinations in Maharashtra and neighboring states including Mumbai, Nashik, Aurangabad, Goa, and popular hill stations.</p>
          </div>
        </div>

        <div class="faq-item">
          <div class="faq-question">
            <h4>Can I track my ride in real-time?</h4>
            <span class="faq-toggle">+</span>
          </div>
          <div class="faq-answer">
            <p>Yes, we provide live tracking through WhatsApp location sharing. You can also share your trip details with family and friends for added safety.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="cta-section">
    <div class="container text-center">
      <h2>Ready to Book Your Ride?</h2>
      <p>Contact us now and experience the best cab service in Pune</p>
      <div style="margin-top: 2rem;">
        <a href="https://wa.me/919325780522" class="btn" target="_blank">
          üí¨ WhatsApp Now
        </a>
        <a href="tel:+919325780522" class="btn btn-primary">
          üìû Call Now
        </a>
      </div>
    </div>
  </section>
</Layout>

<style>
  .page-hero {
    background: linear-gradient(135deg, #1E40AF 0%, #3B82F6 100%);
    color: white;
    padding: 6rem 0 4rem;
    text-align: center;
  }

  .page-hero h1 {
    font-size: 3rem;
    font-weight: 700;
    margin-bottom: 1rem;
  }

  .page-hero p {
    font-size: 1.25rem;
    opacity: 0.9;
  }

  .contact-card {
    background: white;
    padding: 2rem;
    border-radius: 15px;
    text-align: center;
    box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    transition: transform 0.3s ease;
  }

  .contact-card:hover {
    transform: translateY(-5px);
  }

  .contact-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
  }

  .contact-card h4 {
    color: #1E40AF;
    margin-bottom: 1rem;
    font-size: 1.5rem;
  }

  .contact-details {
    margin: 1.5rem 0;
  }

  .contact-details a {
    font-size: 1.25rem;
    font-weight: 600;
    color: #F97316;
    text-decoration: none;
  }

  .contact-details a:hover {
    text-decoration: underline;
  }

  .contact-note {
    font-size: 0.9rem;
    color: #6B7280;
    font-style: italic;
  }

  .booking-form-section {
    background: #F8FAFC;
    padding: 4rem 0;
  }

  .booking-benefits {
    margin-top: 2rem;
  }

  .booking-benefits h4 {
    color: #1E40AF;
    margin-bottom: 1rem;
  }

  .booking-benefits ul {
    list-style: none;
  }

  .booking-benefits li {
    padding: 0.5rem 0;
    font-size: 0.95rem;
  }

  .booking-form-container {
    background: white;
    padding: 2rem;
    border-radius: 15px;
    box-shadow: 0 5px 15px rgba(0,0,0,0.1);
  }

  .booking-form {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
  }

  .form-group {
    display: flex;
    flex-direction: column;
  }

  .form-group label {
    margin-bottom: 0.5rem;
    font-weight: 500;
    color: #374151;
  }

  .form-group input,
  .form-group select,
  .form-group textarea {
    padding: 0.75rem;
    border: 2px solid #E5E7EB;
