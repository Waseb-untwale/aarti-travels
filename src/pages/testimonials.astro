<style>
  .page-hero {
    background: linear-gradient(135deg, #1E40AF 0%, #3B82F6 100%);
    color: white;
    padding: 6rem 0 4rem;
    text-align: center;
  }

  .page-hero h1 {
    font-size: 3rem;
    font-weight: 700;
    margin-bottom: 1rem;
  }

  .page-hero p {
    font-size: 1.25rem;
    opacity: 0.9;
  }

  .stats-section {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 2rem;
    background: #F8FAFC;
    padding: 3rem 2rem;
    border-radius: 15px;
  }

  .stat-item {
    text-align: center;
  }

  .stat-number {
    font-size: 2.5rem;
    font-weight: 700;
    color: #F97316;
    margin-bottom: 0.5rem;
  }

  .stat-label {
    font-size: 1.1rem;
    color: #6B7280;
    font-weight: 500;
  }

  .testimonials-section {
    padding: 4rem 0;
  }

  .testimonial-card {
    background: white;
    border-radius: 15px;
    padding: 2rem;
    box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    transition: transform 0.3s ease;
    height: 100%;
  }

  .testimonial-card:hover {
    transform: translateY(-5px);
  }

  .testimonial-content {
    margin-bottom: 1.5rem;
  }

  .rating {
    font-size: 1.2rem;
    margin-bottom: 1rem;
  }

  .testimonial-content p {
    font-style: italic;
    line-height: 1.6;
    color: #4B5563;
  }

  .author-info h5 {
    color: #1E40AF;
    margin-bottom: 0.25rem;
  }

  .author-info span {
    color: #6B7280;
    font-size: 0.9rem;
  }

  .trip-info {
    background: #F97316;
    color: white;
    padding: 0.25rem 0.75rem;
    border-radius: 15px;
    font-size: 0.8rem;
    display: inline-block;
    margin-top: 0.5rem;
  }

  .video-testimonials {
    background: #F8FAFC;
    padding: 4rem 0;
  }

  .feature-card {
    background: white;
    padding: 2rem;
    border-radius: 15px;
    text-align: center;
    box-shadow: 0 5px 15px rgba(0,0,0,0.1);
  }

  .feature-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
  }

  .feature-card h4 {
    color: #1E40AF;
    margin-bottom: 1rem;
  }

  .feature-author {
    font-size: 0.9rem;
    color: #6B7280;
    font-style: italic;
    margin-top: 1rem;
  }

  .review-form-section {
    padding: 4rem 0;
  }

  .review-platforms {
    margin-top: 2rem;
  }

  .review-platforms h4 {
    color: #1E40AF;
    margin-bottom: 1rem;
  }

  .platform-links {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .platform-link {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem;
    background: #F8FAFC;
    border-radius: 10px;
    text-decoration: none;
    color: #374151;
    transition: background 0.3s ease;
  }

  .platform-link:hover {
    background: #E5E7EB;
  }

  .platform-icon {
    font-size: 1.5rem;
  }

  .quick-review-card {
    background: white;
    padding: 2rem;
    border-radius: 15px;
    box-shadow: 0 5px 15px rgba(0,0,0,0.1);
  }

  .quick-review-card h4 {
    color: #1E40AF;
    margin-bottom: 1rem;
  }

  .rating-buttons {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    margin: 1.5rem 0;
  }

  .rating-btn {
    padding: 0.75rem;
    border: 2px solid #E5E7EB;
    background: white;
    border-radius: 10px;
    cursor: pointer;
    transition: all 0.3s ease;
    text-align: left;
  }

  .rating-btn:hover {
    border-color: #F97316;
    background: #FEF3E2;
  }

  .review-note {
    font-size: 0.85rem;
    color: #6B7280;
    font-style: italic;
  }

  .cta-section {
    background: #1F2937;
    color: white;
    padding: 4rem 0;
  }

  .cta-section h2 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  @media (max-width: 768px) {
    .page-hero h1 {
      font-size: 2rem;
    }

    .stats-section {
      grid-template-columns: repeat(2, 1fr);
      padding: 2rem 1rem;
    }

    .platform-links {
      gap: 0.5rem;
    }

    .rating-buttons {
      gap: 0.25rem;
    }

    .cta-section h2 {
      font-size: 2rem;
    }
  }

  @media (max-width: 480px) {
    .stats-section {
      grid-template-columns: 1fr;
    }
  }
</style>

<script>
  // Add click functionality to rating buttons
  document.querySelectorAll('.rating-btn').forEach(btn => {
    btn.addEventListener('click', () => {
      const rating = btn.textContent;
      const message = `Hi Aarti Travels! I would like to give you a ${rating} rating. Here's my feedback: `;
      const whatsappUrl = `https://wa.me/919325780522?text=${encodeURIComponent(message)}`;
      window.open(whatsappUrl, '_blank');
    });
  });
</script>